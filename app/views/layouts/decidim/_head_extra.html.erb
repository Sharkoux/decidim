<script>
document.addEventListener('DOMContentLoaded', function() {
  setTimeout(() => {
    // Ici retirer les attributs data-open vides
    document.querySelectorAll('[data-open]').forEach((el) => {
      const val = el.getAttribute('data-open');
      if (!val) {
        el.removeAttribute('data-open');
      }
    });

    const stepButtons = document.querySelectorAll('.participatory-space__metadata-modal__step');
    stepButtons.forEach((button) => {
      button.addEventListener('click', function() {
        const panelId = this.getAttribute('aria-controls');
        const panel = document.getElementById(panelId);
        if (panel) {
          panel.focus();
        }
      });
    });
  }, 500); // demi-seconde par exemple
});

document.addEventListener('DOMContentLoaded', function() {
  // Sélectionne tous les <h1> ayant les classes "title-decorator" et "my-12"
  if(window.location.pathname === '/admin/officialization') {
  const headers = document.querySelectorAll('h1.title-decorator.my-12');
  
  headers.forEach(header => {
    // Vérifie si le texte de l'élément correspond exactement
    if (header.textContent.trim() === "La page que vous cherchez est introuvable") {
      // Ici, vous pouvez effectuer une action, par exemple rediriger l'utilisateur
      window.location.href = '/';
    }
  });
}
});

 
</script>
